{
  "$schema": "../../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../../dist/lendai-us/design-system",
  "assets": [
    {
      "input": "./src/assets",
      "glob": "**/*",
      "output": "assets"
    },
    {
      "input": "./src/lib/foundations",
      "glob": "**/*.scss",
      "output": "scss/foundations"
    }
  ],
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": ["src/lib/foundations"]
  },
  "allowedNonPeerDependencies": ["flag-icons", "libphonenumber-js", "ngx-mask"]
}
